{
  "version": "1.0.0",

  "name": "PermaLinker by CentralReach",
  "short_name": "PermaLinker",
  "description": "CentralReach internal permalinks generation and management.",
  "manifest_version": 2,

  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "background": {
    "scripts": [
      "js/libs/jquery3.2.1.js",
      "js/libs/forge0.7.1.js",
      "js/crapi.js",
      "js/background.js"
    ],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://github.centralreach.com/*", "https://github.com/*"],
      "js": ["js/content.js", "js/libs/jquery3.2.1.js"]
    }
  ],

  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "CentralReach FogMachine",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "notifications",
    "idle",
    "https://*.centralreach.com/*",
    "https://github.centralreach.com/*/pull/*",
    "https://github.com/*/pull/*"
  ]
}
